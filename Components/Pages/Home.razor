@page "/"

<MudContainer Class="page-container">
    <MudContainer Class="wrapper">
        <MudNumericField HideSpinButtons="true" T="uint?" Placeholder="0" Class="input" Style="color: rgba(255,255,255,0.8);"></MudNumericField>
        <MudButton Class="open-modal-btn" OnClick="OpenModal" Ripple="false">
            @switch (chosenCrypto)
            {
                case ChosenCrypto.None:
                    <AdornmentContent Style="position: relative; top: 5px; margin-right: 45px;">
                        <MudText Style="color: rgba(255, 255, 255, 0.8);">▼</MudText>
                    </AdornmentContent>
                    break;
                case ChosenCrypto.Bitcoin:
                    <AdornmentContent Class="adornment">
                        <MudImage Src="img/BTC(BTC).svg" Alt="BTC"/>
                        <AdornmentContent Style="display: flex; flex-direction: column; margin-left: 3px;">
                            <MudText Style="color: white; height: 18px; font-size: 12px;">BTC</MudText>
                            <MudText Class="btc" Style="height: 14px; font-size: 10px; border-radius: 4px;">BTC</MudText>
                        </AdornmentContent>
                        <MudText Style="margin-left:5px; color: rgba(255, 255, 255, 0.8);">▼</MudText>
                    </AdornmentContent>
                    break;
                case ChosenCrypto.USDT:
                    <AdornmentContent Class="adornment">
                        <MudImage Src="img/USDT(TRC20).svg" Alt="USDT"></MudImage>
                        <AdornmentContent Style="display: flex; flex-direction: column; margin-left: 3px;">
                            <MudText Style="color: white; height: 18px; font-size: 12px;">USDT</MudText>
                            <MudText Class="usdt" Style="height: 14px; font-size: 10px; border-radius: 4px;">USDT</MudText>
                        </AdornmentContent>
                        <MudText Style="margin-left:5px; color: rgba(255, 255, 255, 0.8);">▼</MudText>
                    </AdornmentContent>
                    break;
                case ChosenCrypto.Ethereum:
                    <AdornmentContent Class="adornment">
                        <MudImage Src="img/ETH(ERC20).svg" Style="height: 32px;" Alt="ETH"></MudImage>
                        <AdornmentContent Style="display: flex; flex-direction: column; margin-left: 3px;">
                            <MudText Style="color: white; height: 18px; font-size: 12px;">ETH</MudText>
                            <MudText Class="eth" Style="height: 14px; font-size: 10px; border-radius: 4px;">ETH</MudText>
                        </AdornmentContent>
                        <MudText Style="margin-left:5px; color: rgba(255, 255, 255, 0.8);">▼</MudText>
                    </AdornmentContent>
                    break;
                case ChosenCrypto.Monero:
                    <AdornmentContent Class="adornment">
                        <MudImage Src="img/XMR(XMR).svg" Alt="XMR"></MudImage>
                        <AdornmentContent Style="display: flex; flex-direction: column; margin-left: 3px;">
                            <MudText Style="color: white; height: 18px; font-size: 12px;">XMR</MudText>
                            <MudText Class="xmr" Style="height: 14px; font-size: 10px; border-radius: 4px;">XMR</MudText>
                        </AdornmentContent>
                        <MudText Style="margin-left:5px; color: rgba(255, 255, 255, 0.8);">▼</MudText>
                    </AdornmentContent>
                    break;
                case ChosenCrypto.BNB:
                    <AdornmentContent Class="adornment">
                        <MudImage Src="img/BNB(BEP20).svg" Alt="BNB"></MudImage>
                        <AdornmentContent Style="display: flex; flex-direction: column; margin-left: 3px;">
                            <MudText Style="color: white; height: 18px; font-size: 12px;">BNB</MudText>
                            <MudText Class="bnb" Style="height: 14px; font-size: 10px; border-radius: 4px;">BNB</MudText>
                        </AdornmentContent>
                        <MudText Style="margin-left:5px; color: rgba(255, 255, 255, 0.8);">▼</MudText>
                    </AdornmentContent>
                    break;
            }
        </MudButton>
    </MudContainer>
    @if (showModal)
    {
        <MudContainer Class="items-container">
            <MudText Class="title">Popular</MudText>

            <MudButton OnClick="() => ChooseCrypto(ChosenCrypto.Bitcoin)" Class="item">
                <MudImage Src="img/BTC(BTC).svg" Alt="BTC"></MudImage>
                <MudText Class="short-name btc">BTC</MudText>
                <MudText Class="name">Bitcoin</MudText>
                <MudText Class="network">NATIVE</MudText>
            </MudButton>
                
            <MudButton OnClick="() => ChooseCrypto(ChosenCrypto.USDT)" Class="item">
                <MudImage Src="img/USDT(TRC20).svg" Alt="USDT"></MudImage>
                <MudText Class="short-name usdt">USDT</MudText>
                <MudText Class="name">Tether</MudText>
                <MudText Class="network">TRC20</MudText>
            </MudButton>
                
            <MudButton OnClick="() => ChooseCrypto(ChosenCrypto.Ethereum)" Class="item">
                <MudImage Src="img/ETH(ERC20).svg" Alt="ETH"></MudImage>
                <MudText Class="short-name eth">ETH</MudText>
                <MudText Class="name">Ethereum</MudText>
                <MudText Class="network">ERC20</MudText>
            </MudButton>
                
            <MudButton OnClick="() => ChooseCrypto(ChosenCrypto.Monero)" Class="item">
                <MudImage Src="img/XMR(XMR).svg" Alt="XMR"></MudImage>
                <MudText Class="short-name xmr">XMR</MudText>
                <MudText Class="name">Monero</MudText>
                <MudText Class="network">XMR</MudText>
            </MudButton>
                
            <MudButton OnClick="() => ChooseCrypto(ChosenCrypto.BNB)" Class="item">
                <MudImage Src="img/BNB(BEP20).svg" Alt="BNB"></MudImage>
                <MudText Class="short-name bnb">BNB</MudText>
                <MudText Class="name">Binance Coin</MudText>
                <MudText Class="network">BEP20</MudText>
            </MudButton>
        </MudContainer>
    }
</MudContainer>

@code{
    enum ChosenCrypto
    {
        None,
        Bitcoin,
        USDT,
        Ethereum,
        Monero,
        BNB
    }

    ChosenCrypto chosenCrypto = ChosenCrypto.None;
    bool showModal = false;

    void OpenModal()
    {
        showModal = !showModal;
    }

    void ChooseCrypto(ChosenCrypto chosenCrypto)
    {
        this.chosenCrypto = chosenCrypto;
        showModal = false;
    }
}

